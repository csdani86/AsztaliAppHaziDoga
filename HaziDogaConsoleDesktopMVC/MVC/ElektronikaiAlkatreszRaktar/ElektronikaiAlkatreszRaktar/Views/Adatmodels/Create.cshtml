@model ElektronikaiAlkatreszRaktar.Models.Adatmodel

@{
    ViewData["Title"] = "Create";
}

<h1>Új Hozzáadása</h1>

<h4>Termékek</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Megnevezes" class="control-label"></label>
                <input asp-for="Megnevezes" class="form-control" />
                <span asp-validation-for="Megnevezes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gyarto" class="control-label"></label>
                <input asp-for="Gyarto" class="form-control" />
                <span asp-validation-for="Gyarto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipus" class="control-label"></label>
                <input asp-for="Tipus" class="form-control" />
                <span asp-validation-for="Tipus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeszerzesiAr" class="control-label"></label>
                <input asp-for="BeszerzesiAr" class="form-control" />
                <span asp-validation-for="BeszerzesiAr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Hozzáadás" class="btn btn-primary" style="width:100px" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-light" style="width:100px">Vissza</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
